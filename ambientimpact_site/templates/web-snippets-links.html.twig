{% set baseClass = 'view-web-snippets__links' %}

<div{{ create_attribute({'class': [baseClass]}) }}>
  <h2{{ create_attribute({'class': [
    baseClass ~ '-heading',
    'visually-hidden'
  ]}) }}>{{
    'Web snippet links'|trans
  }}</h2>

  <ul{{ create_attribute({'class': [
    baseClass ~ '-list',
    'links',
    'inline'
  ]}) }}>
    {%- for key, item in items -%}
      <li{{ create_attribute({'class': [
        baseClass ~ '-list-item',
        baseClass ~ '-list-item--' ~ key
      ]}) }}>
        <a{{ item.linkAttributes.addClass(baseClass ~ '-list-item-link') }}>{{
          item.content
        }}</a>
      </li>
    {%- endfor -%}
  </ul>
</div>
